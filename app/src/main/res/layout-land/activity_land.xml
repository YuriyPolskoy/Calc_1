<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.mycalc.MainActivity">

    <TextView
        android:id="@+id/str_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <TextView
        android:id="@+id/str_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/colorDarkGray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_7"
                    style="@style/number_buttons"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_8"
                    style="@style/number_buttons"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_9"
                    style="@style/number_buttons"
                    android:text="9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_4"
                    style="@style/number_buttons"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_5"
                    style="@style/number_buttons"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_6"
                    style="@style/number_buttons"
                    android:text="6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_1"
                    style="@style/number_buttons"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/number_buttons"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/number_buttons"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_dot"
                    style="@style/number_buttons"
                    android:text="." />

                <Button
                    android:id="@+id/btn_0"
                    style="@style/number_buttons"
                    android:text="0" />

                <View style="@style/number_buttons" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_div"
                style="@style/functional_buttons"
                android:text="/" />

            <Button
                android:id="@+id/btn_mult"
                style="@style/functional_buttons"
                android:text="x" />

            <Button
                android:id="@+id/btn_min"
                style="@style/functional_buttons"
                android:text="-" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/functional_buttons"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_del"
                style="@style/functional_buttons"
                android:text="DEL" />

            <View style="@style/functional_buttons" />

            <View style="@style/functional_buttons" />

            <Button
                android:id="@+id/btn_result"
                style="@style/functional_buttons"
                android:text="=" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/colorSpringGreen"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_inv"
                    style="@style/func2_buttons"
                    android:text="INV"  />

                <Button
                    android:id="@+id/btn_deg"
                    style="@style/func2_buttons"
                    android:text="DEG"  />

                <Button
                    android:id="@+id/btn_percent"
                    style="@style/func2_buttons"
                    android:text="%"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_sin"
                    style="@style/func2_buttons"
                    android:text="sin" />

                <Button
                    android:id="@+id/btn_cos"
                    style="@style/func2_buttons"
                    android:text="cos"  />

                <Button
                    android:id="@+id/btn_tan"
                    style="@style/func2_buttons"
                    android:text="tan"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ln"
                    style="@style/func2_buttons"
                    android:text="ln" />

                <Button
                    android:id="@+id/btn_log"
                    style="@style/func2_buttons"
                    android:text="log"  />

                <Button
                    android:id="@+id/btn_abs"
                    style="@style/func2_buttons"
                    android:text="!"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pi"
                    style="@style/func2_buttons"
                    android:text="pi" />

                <Button
                    android:id="@+id/btn_e"
                    style="@style/func2_buttons"
                    android:text="e"  />

                <Button
                    android:id="@+id/btn_pow"
                    style="@style/func2_buttons"
                    android:text="^"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_lft_brct"
                    style="@style/func2_buttons"
                    android:text="(" />

                <Button
                    android:id="@+id/btn_rght_brct"
                    style="@style/func2_buttons"
                    android:text=")"  />

                <Button
                    android:id="@+id/btn_sqrt"
                    style="@style/func2_buttons"
                    android:text="sqrt"  />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

